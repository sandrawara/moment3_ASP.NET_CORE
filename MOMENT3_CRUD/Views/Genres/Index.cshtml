@model IEnumerable<MOMENT3_CRUD.Models.Genres>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
              <h3>Genres</h3>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Genre_Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.GenresId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.GenresId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.GenresId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
