@model IEnumerable<MOMENT3_CRUD.Models.CD>

@{
    ViewData["Title"] = "Index";
}

<h1>Albums</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Length)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Label)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genres)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Artist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Length)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Label)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genres.Genre_Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CdId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CdId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CdId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
